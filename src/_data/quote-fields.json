{
  "quoteStepName": "Your Items",
  "recapTitle": "Review Your Request",
  "sections": [
    {
      "title": "Event Details",
      "fields": [
        {
          "type": "heading",
          "title": "Event Details"
        },
        {
          "name": "start_date",
          "type": "date",
          "label": "Event Start Date",
          "required": true,
          "half": true,
          "note": "Please provide at least 2 weeks notice for bookings"
        },
        {
          "name": "start_time",
          "label": "Event Start Time",
          "placeholder": "e.g. 10:00am",
          "half": true
        },
        {
          "name": "end_date",
          "type": "date",
          "label": "Event End Date",
          "required": true,
          "half": true
        },
        {
          "name": "end_time",
          "label": "Event End Time",
          "placeholder": "e.g. 6:00pm",
          "half": true
        },
        {
          "name": "event_type",
          "type": "select",
          "label": "Type of Event",
          "required": true,
          "options": [
            "Wedding",
            "Birthday Party",
            "Corporate Event",
            "Festival",
            "School Fete",
            "Private Party",
            "Other"
          ],
          "note": "Select 'Other' if your event type is not listed"
        },
        {
          "name": "event_location",
          "label": "Event Location",
          "placeholder": "Venue name and address",
          "required": true
        }
      ]
    },
    {
      "title": "Your Details",
      "fields": [
        {
          "type": "heading",
          "title": "Your Details"
        },
        {
          "name": "name",
          "label": "Your Name",
          "placeholder": "Your name",
          "required": true
        },
        {
          "name": "email",
          "type": "email",
          "label": "Email Address",
          "placeholder": "Your email address",
          "required": true
        },
        {
          "name": "phone",
          "label": "Phone Number",
          "placeholder": "Your phone number"
        },
        {
          "name": "contact_preference",
          "type": "radio",
          "label": "Preferred Contact Method",
          "options": ["Email", "Phone", "Either"],
          "note": "We'll respond within 24 hours on business days"
        },
        {
          "name": "message",
          "type": "textarea",
          "label": "Your Message",
          "placeholder": "Any additional information about your event",
          "rows": 4
        }
      ]
    }
  ],
  "submitButtonText": "Submit Quote Request"
}
