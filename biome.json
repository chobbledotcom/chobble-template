{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "files": {
    "includes": [
      "**/*.js",
      "**/*.mjs",
      "!_site",
      "!coverage",
      "!result",
      "!bin",
      "!**/.*"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "error",
        "noThisInStatic": "error",
        "noUselessThisAlias": "error",
        "useArrowFunction": "error"
      },
      "style": {
        "useConst": "error"
      },
      "suspicious": {
        "noVar": "error",
        "noDoubleEquals": "error",
        "noConsole": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "src/_lib/build/**/*.js",
        "src/_lib/media/unused-images.js",
        "src/_lib/eleventy/pdf.js",
        "ecommerce-backend/server.js",
        "**/test/**/*.js"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/test/**/*.js"],
      "linter": {
        "domains": {
          "test": "recommended"
        }
      }
    }
  ]
}
