{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "extends": ["./packages/js-toolkit/configs/biome.base.json"],
  "overrides": [
    {
      "includes": [
        "src/_lib/build/**/*.js",
        "ecommerce-backend/server.js",
        "packages/js-toolkit/**/*.js"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/js-toolkit/**/*.js"],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": {
              "level": "error",
              "options": {
                "maxAllowedComplexity": 30
              }
            }
          }
        }
      }
    }
  ]
}
